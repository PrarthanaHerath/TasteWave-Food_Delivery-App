<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Tracking Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Delivery Time -->
        <TextView
            android:id="@+id/deliveryTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Delivery Time: 30 mins"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Distance -->
        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 5.0 km"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- Delivery Status -->
        <TextView
            android:id="@+id/deliveryStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Status: In Transit"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- Refresh Button -->
        <Button
            android:id="@+id/refreshTrackingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:textColor="@android:color/white"
            android:background="@color/black"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
