<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:radius="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white">

        <!-- Order ID and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order ID: 123"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:drawableStart="@android:drawable/ic_menu_info_details"/>

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Pending"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawableStart="@android:drawable/ic_menu_recent_history"/>
        </LinearLayout>

        <!-- Total Price -->
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $25.50"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:drawableStart="@android:drawable/ic_menu_compass"/>

        <!-- Order Date -->
        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-02-13"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:drawableStart="@android:drawable/ic_menu_today"/>

        <!-- Delivery Address -->
        <TextView
            android:id="@+id/tv_delivery_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: 123 Main Street, City"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:drawableStart="@android:drawable/ic_menu_mapmode"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>
